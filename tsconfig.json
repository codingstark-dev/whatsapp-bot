{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./",
    //"strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.sample.ts"
  ]
}